default_body {
  margin-top: 0px; 
  margin-bottom: 0px; 
  margin-left: 0px; 
  margin-right: 0px;
  padding: 0;
  
  color: #333;
  line-height: 1.42857142857143;
  
  font-size: 10pt; 
  font-family: Arial,sans-serif;
}

div.mainContainer{
  height: 54px; 
  width: 68em;
  margin: 0 auto; 
  padding: 0;
  
  box-sizing: border-box;
  display: flex;
  position: fixed;
  background-color: rgb(255, 0, 0);
}

table {
  border-collapse: collapse;
  margin-top: 10px;
}

table, td, th {
  font-style: inherit;
  border: 0px solid #dddddd;
  text-align: left;
  padding: 10px;
}

table, tr, td .text_plant {
  width: 100%;
  border-bottom: 2px solid #D0D0D0;
  padding: 0 20px;
}
  
tr:nth-child(even) {
  background-color: #dddddd;
}

h1, body {
  font-style: inherit;
  font-weight: 500;
  padding: 8px;
}